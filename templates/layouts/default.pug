		jwplayer.key = "YEUwUA9wRFeDcydr"; //Test Key - replace this with your own valid JWPlayer license key
	script.
		var pbjs = pbjs || {};
		pbjs.que = pbjs.que || [];
		var tempTag = false;
		var invokeVideoPlayer = function (url) {
			tempTag = url;
		}

		var adUnits = [{
			code: 'video1',
			mediaTypes: {
				video: {
					playerSize: [640, 480],
					context: 'instream',
					mimes: ["video/mp4"],
					maxduration: 30,
					api: [1, 2],
					playerSize: [640, 480],
					protocols: [2, 3]
				}
			},
			bids: [{
				bidder: 'criteo',
				params: {
					zoneId: 1455580,
					video: {
						skip: 0,
						playbackmethod: 1,
						placement: 1,
					}
				}
			}]
		}]

		pbjs.que.push(function () {
			pbjs.addAdUnits(adUnits);
			// pbjs.requestBids({
			// 	timeout: 3000,
			// 	bidsBackHandler: function (bids) {
			// 		var highestCpmBids = pbjs.getHighestCpmBids('video1');
			// 		if (highestCpmBids.length) {
			// 			pbjs.renderAd(document, highestCpmBids[0].adId);
			// 		}
			//
			// 	}
			// });
			pbjs.requestBids({
				timeout: 5000,
				bidsBackHandler: function (bids) {
					console.log("bidsBackHandler")
					var highestCpmBids = pbjs.getHighestCpmBids('video1');
					var elementExists = document.getElementById("playercontainer")
					var videoUrl = highestCpmBids[0] ? highestCpmBids[0].vastUrl : "";
					invokeVideoPlayer(videoUrl);
				}
			});
		});
	
	script.
		var jwPlayerInstance = jwplayer("playercontainer");
		invokeVideoPlayer = function(url) {
			console.log("invokeVideoPlayer", url)
			jwPlayerInstance.setup({
				"file": "http://video-demo.appnexus.com/pbjs/JWPlayerDemo/AppNexus_Summit_Video_HighRes.mp4",
				"width": 640,
				"height": 480,
				"autostart": true,
				"mute": true,
				"advertising": {
					client: "vast",
				}
			});
			
			if (url) {
				jwPlayerInstance.on('beforePlay', function () {
					jwPlayerInstance.playAd(url);
				})
			}
			
		}

		if (tempTag) {
			invokeVideoPlayer(tempTag);
			tempTag = false;
		}
